<configuration>
    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>bd-master-1</value>
    </property>
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>
    <property>
        <name>yarn.nodemanager.resource.memory-mb</name>
        <value>4096</value>
    </property>
    <property>
        <name>yarn.nodemanager.vmem-check-enabled</name>
        <value>false</value>
    </property>
    <property>
        <name>yarn.nodemanager.resource.cpu-vcores</name>
        <value>4</value>
    </property>
    <property>
        <name>yarn.resourcemanager.scheduler.address</name>
        <value>bd-master-1:8099</value>
    </property>
    <!--federation rm-->
    <property>
        <name>yarn.federation.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.federation.state-store.class</name>
        <value>org.apache.hadoop.yarn.server.federation.store.impl.ZookeeperFederationStateStore</value>
    </property>
    <property>
        <name>yarn.resourcemanager.cluster-id</name>
        <value>test1</value>
    </property>
    <property>
        <name>hadoop.zk.address</name>
        <value>bd-master-1:2181</value>
    </property>
    <property>
        <name>yarn.resourcemanager.epoch</name>
        <value>11</value>
    </property>
    <!--federation-->
</configuration>